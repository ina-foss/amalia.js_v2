{
  "name": "@ina/amalia",
  "description": "Amalia is a extensible and versatile HTML5 multimedia player",
  "author": "INA",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:icon && ng serve",
    "start-examples": "npm run build && cp -r dist/amalia/assets/ samples/ &&  cp -r dist/amalia/amalia.min.js samples/main.js && http-server samples/ -i --cors * '*' -z -f -p 4201 -d ",
    "gendoc": "typedoc --out docs/api src --ignoreCompilerErrors --name Amalia --readme ./docs/README.md --theme docs/api-theme",
    "gendoc-md": "typedoc --plugin typedoc-plugin-markdown --out docs/api-md src --ignoreCompilerErrors --name Amalia --readme ./docs/README.md",
    "build:component": "ng build --prod --output-hashing none && node build-web-compoent.js",
    "build:icon": "svg-sprite -C svg-sprite.config.json src/styles/svgs/*.svg",
    "build": "npm run build:icon && npm run build:component",
    "publish-local-repo": "cp -r package-public.json dist/amalia/package.json && cd dist/amalia && npm publish",
    "test": "ng test --codeCoverage=true",
    "build-test": "ng test --codeCoverage=true --watch=false --browsers=ChromeHeadlessCI",
    "sonar": "node sonar.conf.js",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ng lint && ng test --watch=false && npm run gendoc"
    }
  },
  "dependencies": {
    "@angular/animations": "~9.1.1",
    "@angular/common": "~9.1.1",
    "@angular/compiler": "~9.1.1",
    "@angular/core": "~9.1.1",
    "@angular/elements": "^9.1.1",
    "@angular/forms": "~9.1.1",
    "@angular/platform-browser": "~9.1.1",
    "@angular/platform-browser-dynamic": "~9.1.1",
    "@angular/router": "~9.1.1",
    "@ina/amalia-model": "^0.2.5",
    "document-register-element": "^1.7.2",
    "dompurify": "^2.0.8",
    "hls.js": "^0.13.2",
    "interactjs": "^1.9.10",
    "lodash": "^4.17.15",
    "ngx-build-plus": "^9.0.6",
    "rxjs": "~6.5.5",
    "s": "^1.0.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.1",
    "@angular/cli": "^9.1.1",
    "@angular/compiler-cli": "~9.1.1",
    "@angular/language-service": "~9.1.1",
    "@types/hls.js": "^0.12.5",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concat": "^1.0.3",
    "fs-extra": "^9.0.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "sonarqube-scanner": "^2.6.0",
    "svg-sprite": "^1.5.0",
    "ts-node": "^8.8.1",
    "tslint": "~5.15.0",
    "typedoc": "^0.16.11",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "~3.7.5"
  }
}
