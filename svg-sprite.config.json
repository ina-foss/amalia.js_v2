{
  "dest": "src/assets/svgs/",
  "shape": {
    "dimension": {
      "maxWidth": 50,
      "precision": 2,
      "attributes": false
    },
    "spacing": {
      "padding": 0,
      "box": "content"
    },
    "transform": [
      {
        "svgo": {
          "plugins": [
            {
              "convertShapeToPath": false
            },
            {
              "moveGroupAttrsToElems": false
            }
          ]
        }
      }
    ]
  },
  "svg": {
    "xmlDeclaration": true,
    "doctypeDeclaration": true,
    "namespaceIDs": true,
    "namespaceIDPrefix": "amalia-",
    "namespaceClassnames": true,
    "dimensionAttributes": true
  },
  "mode": {
    "symbol": {
      "prefix": "amalia-svg-%s",
      "dimensions": "-size",
      "render": {
        "scss": false
      },
      "example": true
    }
  }
}
